{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@": ["./src/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["scripts/**/*", "src/**/*", "tests/**/*"]
}
