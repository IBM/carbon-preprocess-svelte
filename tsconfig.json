{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM.Iterable"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
